<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonDonate">
        <item name="background">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullScreenAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:padding">20dp</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BgTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:padding">20dp</item>
        <item name="alpha">.1</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="MySuperAppTheme" />

    <style name="SettingsBox">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_profile</item>
    </style>

    <style name="SettingsTV">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/profile_border</item>
    </style>

    <style name="SettingsTVStartEnd">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsTVSub">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsTVTitle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsRowTitle">
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsRowContent">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingStart">140dp</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsRowImage">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>